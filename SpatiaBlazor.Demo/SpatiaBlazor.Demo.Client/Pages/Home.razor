@page "/"
@using SpatiaBlazor.Components.Address
@using SpatiaBlazor.Components.Address.Dialog

<MudText Class="my-4">Selected: @_model?.ToString()</MudText>

<MudDivider />

<MudTabs Elevation="2" Rounded="true" ApplyEffectsToContainer="true" PanelClass="pa-6">
    <MudTabPanel Text="Inline">
        <MudAddressComponent @bind-Value="_model"></MudAddressComponent>
    </MudTabPanel>
    <MudTabPanel Text="Dialog">
        <MudAddressDialogField @bind-Value="_model"></MudAddressDialogField>
    </MudTabPanel>
</MudTabs>

@code
{
    private AddressViewModel? _model;
}
