@page "/"
@using NetTopologySuite.Geometries
@using SpatiaBlazor.Components.Address
@using SpatiaBlazor.Components.Address.Dialog
@using SpatiaBlazor.Components.Address.Suggestions

<MudText Class="my-4">Selected: @_model?.ToString()</MudText>

<MudDivider />

<MudTabs Elevation="2" Rounded="true" ApplyEffectsToContainer="true" PanelClass="pa-6">
    <MudTabPanel Text="Inline">
        <MudAddressComponent @bind-Value="_model"></MudAddressComponent>
    </MudTabPanel>
    <MudTabPanel Text="Dialog">
        <MudAddressDialogField Variant="Variant.Outlined" @bind-Value="_model"></MudAddressDialogField>
    </MudTabPanel>
</MudTabs>

@code
{
    private AddressViewModel? _model = new AddressViewModel
    {
        SuggestionsParameters = new AddressSuggestionsParametersViewModel
        {
            BoundingBox = new Envelope(-106.6168,-93.5074,25.8419,36.5008),
            BiasLocation = new Point(-97.733330, 30.266666),
            TypeFilters = new HashSet<string>{"house"}
        }
    };
}
